%h1= t('import.title')
%h2= "#{t('import.step')} 1"

= form_tag tasks_import_step_2_path, multipart: true do
  = t('import.file_to_upload')
  = file_field_tag "file"
  %br
  = t('import.select_encoding')
  = select_tag :encoding, options_for_select([[t("import.encoding.win1251"), 'windows-1251'], [t("import.encoding.utf-8"), 'utf-8']], params[:encoding])
  %br
  =# TODO: col_sep
  = submit_tag t('import.next'), class: "btn"