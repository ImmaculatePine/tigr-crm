= simple_form_for [:admin, @user], html: { class: 'form-horizontal' } do |f|

  = f.input :email
  = f.input :name
  
  - if @user.new_record? 
    = f.input :password
    = f.input :password_confirmation

  .form-actions
    = f.submit nil, class: 'btn btn-primary'
    = link_to t('.cancel', default: t("helpers.links.cancel")), admin_users_path, class: 'btn'